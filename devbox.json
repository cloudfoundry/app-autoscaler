{
  "packages": {
    "github:joergdw/prspkgs#multiapps-cli-plugin":      "",
    "github:joergdw/prspkgs#cloud-mta-build-tool":      "",

    "path:.#app-autoscaler-cli-plugin":                 "",
    "path:.#log-cache-cli-plugin":                      "",
    "path:.#uaa-cli":                                   "",
    "path:.#flatten_json-schema":                       "",

    "act":                                              "0.2.84",
    "apple-sdk": {
      "version": "latest",
      "platforms": [
        "aarch64-darwin"
      ]
    },
    "bosh-cli":                                         "7.3.1",
    "cloudfoundry-cli":                                 "8.17.0",
    "coreutils":                                        "latest",
    "credhub-cli":                                      "2.9.53",
    "delve":                                            "1.26.0",
    "direnv":                                           "2.37.1",
    "fly":                                              "7.14.3",
    "gh":                                               "2.86.0",
    "ginkgo":                                           "2.28.1",
    "gnumake":                                          "4.4.1",
    "gnused":                                           "latest",
    "gnutar":                                           "latest",
    "go":                                               "1.24.5",
    "go-tools":                                         "2025.1.1",
    "golangci-lint":                                    "2.8.0",
    "gopls":                                            "0.21.0",
    "google-java-format":                               "1.34.0",
    "gum":                                              "0.17.0",
    "jdt-language-server":                              "1.55.0",
    "jq":                                               "1.8.1",
    "markdownlint-cli2":                                "0.20.0",
    "maven":                                            "3.9.12",
    "mysql":                                            "10.6.12",
    "oha":                                              "1.12.1",
    "openssl":                                          "3.6.0",
    "postgresql":                                       "latest",
    "python":                                           "3.14.2",
    "redocly":                                          "1.34.4",
    "ripgrep":                                          "15.1.0",
    "shellcheck":                                       "0.11.0",
    "temurin-bin-21":                                   "21.0.3",
    "which":                                            "latest",
    "xq-xml":                                           "1.3.0",
    "yq-go":                                            "4.50.1"
  },
  "shell": {
    "init_hook": [
      "export GOFIPS140=v1.0.0",
      "export GOTOOLCHAIN='local'",
      "install_plugin_if_needed() {",
      "  sum=$(sha1sum $(which $1) | cut --delimiter=' ' --fields='1')",
      "  cf plugins --checksum | grep --quiet ${sum} || cf install-plugin -f $(which $1)",
      "}",
      "install_plugin_if_needed 'app-autoscaler-cli-plugin'",
      "install_plugin_if_needed 'log-cache-cli'",
      "install_plugin_if_needed multiapps-cli-plugin"
    ]
  }
}
